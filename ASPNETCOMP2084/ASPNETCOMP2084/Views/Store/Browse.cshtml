
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ASPNETCOMP2084.Models.Genre

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Browse</title>
</head>
<body>
    <h1>Albums for @ViewBag.genre</h1>

    <table class="table table-striped table-hover">
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Price</th>
        </tr>

        @foreach (var a in Model.Albums)
        {
        <tr>
            <td>@a.AlbumName</td>
            <td>@a.Artist.Artist1</td>
            <td>@String.Format("{0:c}",a.price)</td>
        </tr>
        }

    </table>


    <div> 
    </div>
</body>
</html>
