@model IEnumerable<ASPNETCOMP2084.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Albums: @ViewBag.count</h2>

<section class="col-md-3">
    @Html.ActionLink("Create New", "Create")
</section>

<section class="col-md-9 text-right">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <input name="Title" id="title" placeholder="Enter album name" required />
        <button class="btn btn-default">Search</button>
    }
    @Html.ActionLink("Create New", "Create")
</section>



<table class="table table-striped table-hover sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist.Artist1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.genre1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumArtistUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Artist1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.genre1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumArtistUrl)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
